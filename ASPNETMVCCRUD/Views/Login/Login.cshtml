@model ASPNETMVCCRUD.Models.UserLogin

@{
    ViewBag.Title = "Login";
}

<h2>@ViewBag.Title</h2>

<hr />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-group row">
        <div class="col-md-1">
            @Html.LabelFor(model => model.Name)
        </div>
        <div class="col-md-3">
            @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
            <span class="text-danger">@ViewBag.UserError</span>
            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group row">
        <div class="col-md-1">
            @Html.LabelFor(model => model.Password)
        </div>
        <div class="col-md-3">
            @Html.TextBoxFor(model => model.Password, new { @class = "form-control", type = "password" })
            <span class="text-danger">@ViewBag.PasswordError</span>
            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group d-flex">
        <input type="submit" value="Login" class="btn btn-outline-success w-10 mx-2" /> |
        @Html.ActionLink("Register", "AddUser", "User", "", new { @class = "mx-2" })
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}